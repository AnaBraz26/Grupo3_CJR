generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @default(autoincrement()) @id
  password String
  email String  @unique
  name  String
  course String?
  department String?
  reviews Reviews[]
  comments Comments[]
}

model Reviews {
	id Int @default(autoincrement()) @id
	content String 
  discipline String
  date DateTime
	author Users @relation(fields: [authorId], references: [id], onDelete: Cascade)
  professor Professors @relation(fields: [professorId], references: [id], onDelete: Cascade)
	authorId Int
  professorId Int
}

model Professors {
  id Int @default(autoincrement()) @id
  name  String
  department String
  discipline String
  reviews Reviews[]
}

model Comments {
  id Int @default(autoincrement()) @id
	content String 
  date DateTime
  author Users @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
}