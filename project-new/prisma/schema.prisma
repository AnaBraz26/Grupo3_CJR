generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
  id    Int     @default(autoincrement()) @id
  password String
  email String  @unique
  name  String
  course String?
  department String?
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  reviews Reviews[]
  comments Comments[]
  UsersOnline UsersOnline[]
}

model UsersOnline {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  token  String
  userId Int
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Reviews {
	id Int @default(autoincrement()) @id
  userId Int
  professorId Int
  disciplineId Int
	content String 
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
	user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  professor Professors[]
	discipline Discipline[]
  comments Comments[]
}

model Comments {
  id Int @default(autoincrement()) @id
  usersId Int
  reviewsId Int
	content String 
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  users Users @relation(fields: [usersId], references: [id], onDelete: Cascade)
  reviews Reviews @relation(fields: [reviewsId], references: [id], onDelete: Cascade)
}

model Professors {
  id Int @default(autoincrement()) @id
  name  String
  department String
  disciplineId Int
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  reviews Reviews[]
  discipline Discipline @relation(fields: [disciplineId], references: [id], onDelete: Cascade)
}


model Discipline {
  id Int @default(autoincrement()) @id
  name String
  professorId Int
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  reviews Reviews[]
  professor Professors[]
}